md-content(md-padding)
    md-card
        md-card-content
            .row: select(ng-model='pkgMngr').form-control
                option(ng-repeat='manager in managers') {{ manager }}
            .row: .input-group
                span.input-group-btn: button.btn.btn-default(ng-click='updatePkg()') Install
                input.form-control(placeholder='Package(s)' ng-model='pkgUpdateQuery')
            .row
                pre {{ terminalResponse }}
            .row: .input-group
                span.input-group-btn: button.btn.btn-default(ng-click='sendInput()') Send
                input.form-control(type='password' placeholder='Command-line input' ng-model='terminalInput')
