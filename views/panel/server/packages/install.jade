.panel.panel-default
    .panel-heading Install package
    .panel-body
        .col-sm-2: select(ng-model='pkgMngr').form-control
            option(ng-repeat='manager in managers') {{ manager }}
        .col-sm-10: .input-group
            span.input-group-btn: button.btn.btn-default(ng-click='installPkg()') Install
            input.form-control(placeholder='Package(s)' ng-model='pkgInstallQuery')
        .col-sm-12
            pre {{ terminalResponse }}
        .col-sm-12: .input-group
            span.input-group-btn: button.btn.btn-default(ng-click='sendInput()') Send
            input.form-control(type='password' placeholder='Command-line input' ng-model='terminalInput')
