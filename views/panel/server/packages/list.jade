md-content(md-padding)
    md-card
        md-table-container
            table(md-table md-progress='deferred')
                thead(md-head)
                    tr(md-row)
                        th(md-column) Package name
                tbody(md-body)
                    tr(
                        md-row
                        md-auto-select
                        ng-repeat='pkg in pkgs')
                        td(md-cell)
                            a(ng-href='/server/{{ server.hostname }}/packages/{{ pkg }}')
                                | {{ pkg }}
        md-table-pagination(
            md-limit='query.limit'
            md-page='query.page'
            md-total='{{pkgCount}}'
            md-on-paginate='onPaginate'
            md-page-select
        )
