.row
    .panel.panel-default
        .panel-heading Edit group permissions
        .panel-body
            h3 Permissions
            div(ng-repeat='category in permissionscategories')
                h4 {{ category.name }}
                table.table.table-striped.table-hover
                    thead
                        td Privileged
                        td Name
                        td Description
                    tbody
                        tr(ng-repeat='permission in category.permissions')
                            td: .togglebutton: label
                                input(type="checkbox")
                                span.toggle
                            td {{ permission.name }}
                            td {{ permission.description }}
