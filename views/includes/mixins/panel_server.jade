mixin panel_server
    
    if (hostname) 
        p.text-muted server
        
        +list('/server/' + hostname + '/overview', 'fa-server', 'Overview')

        if (type != 'web')
            +list('/server/' + hostname + '/packages/', 'fa-cogs', 'Packages', [
                { target_path: 'install/', icon: 'fa-cloud-download', name: 'Install' },
                { target_path: 'update/' , icon: 'fa-wrench', name: 'Update'  }
            ])
            +list('/server/' + hostname + '/services/', 'fa-tasks', 'Services', [
                { target_path: 'running/', icon: 'fa-dashboard', name: 'Running' }
            ])
