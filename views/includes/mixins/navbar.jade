mixin navbar
    
    nav.navbar.navbar-default.navbar-fixed-top: .container
        .navbar-header
            a.navbar-brand(href='/') Coyot.io
            
        if (user.role >= 1)
            .pull-right.container-fluid
                ul.nav.nav-pills
                    if (path == '/')
                        li.active(role="presentation"): a(href='/') Home
                    else
                        li(role="presentation"): a(href='/') Home
